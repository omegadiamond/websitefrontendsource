{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"taskName": "Run Hugo Server",
			"type": "shell",
			"command": "hugo -v server -p 5173",
			"problemMatcher": ["$go"]
		},
		{
			"taskName": "Build site",
			"type": "shell",
			"command": "hugo",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}
